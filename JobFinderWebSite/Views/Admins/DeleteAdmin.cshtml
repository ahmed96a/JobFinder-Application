@model DataAccessLayer.AspNetUser

@{
    ViewBag.Title = "DeleteAdmin";
}

<div class="content-header">
    <div class="container-fluid">
        <h4>Delete</h4>

        <p>Are you sure you want to delete this?</p>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to Admins List", "GetAdmins", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</section>

@section scripts{

    <script>
        $(function () {

            $("aside.main-sidebar .sidebar nav li.nav-item a[href*='/Admins/GetAdmins']").addClass("active")
            

            // remove the form of the search input in the dashboard page.
            $("nav.main-header form#search-form").remove();

        });
    </script>

}