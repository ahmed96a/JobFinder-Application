@model IEnumerable<DataAccessLayer.AspNetUser>

@{
    ViewBag.Title = "GetPublishers";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

                @if (ViewBag.Search != null)
                {
                    <h2>"@ViewBag.Search" Results</h2>
                }

                <h2>Get Publishers</h2>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">

        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Posted Jobs
                </th>
                <th>
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a target="_blank" href="~/Admins/GetJobs?Publisher=@item.UserName">@Html.DisplayFor(modelItem => item.UserName)</a><br />
                        <a target="_blank" href="~/Admins/Contact?TargetEmail=@item.Email" title="Send Email" style="color: black"><i class="far fa-envelope"></i></a>
                        <a target="_blank" href="~/Admins/SendNotification?ReceiverEmail=@item.Email" title="Send Notification" style="color: black"><i class="far fa-bell"></i></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a>@Html.DisplayFor(modelItem => item.PostedJobs.Count)</a>
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>

@section scripts{

    <script>
        $(function () {

            $("aside.main-sidebar .sidebar nav #li-Publishers-Applicants").addClass("menu-open");
            $("aside.main-sidebar .sidebar nav #li-Publishers-Applicants #a-Publishers-Applicants").addClass("active");
            $("aside.main-sidebar .sidebar nav li.nav-item a[href*='/Admins/GetPublishers']").addClass("active");

            // Search Form

            $("nav.main-header form#search-form input#search-input").prop("placeholder", "Search Publishers");
            $("nav.main-header form#search-form").prop("action", "GetPublishers");

        });
    </script>

}