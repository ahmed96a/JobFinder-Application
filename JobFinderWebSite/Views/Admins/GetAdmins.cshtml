@model IEnumerable<DataAccessLayer.AspNetUser>

@{
    ViewBag.Title = "GetAdmins";
}

<div class="content-header">
    <div class="container-fluid">

        @if (ViewBag.Search != null)
        {
            <h2>"@ViewBag.Search" Results</h2>
        }

        <h2>Admins</h2>

        <p>@Html.ActionLink("Add Admin", "CreateAdmin", null, new { @class = "btn btn-primary" })</p>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Admin Type
                </th>
                <th>
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "DeleteAdmin", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>

@section scripts{

    <script>
        $(function () {

            $("aside.main-sidebar .sidebar nav li.nav-item a[href*='/Admins/GetAdmins']").addClass("active")

            // Search Form

            $("nav.main-header form#search-form input#search-input").prop("placeholder", "Search Admin");
            $("nav.main-header form#search-form").prop("action", "GetAdmins");


        });
    </script>

}