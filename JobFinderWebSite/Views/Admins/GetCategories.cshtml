@model IEnumerable<DataAccessLayer.Category>

@{
    ViewBag.Title = "GetCategories";
}

<div class="content-header">
    <div class="container-fluid">

        @if (ViewBag.Search != null)
        {
            <h2>"@ViewBag.Search" Results</h2>
        }

        <h2>Categories</h2>

        <p>
            @Html.ActionLink("Create New Category", "Create", "Categories", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryDescription)
                </th>
                <th>
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.CategoryName).ToString(), "GetJobs", "Admins", new { CategoryId = item.Id }, new { target = "_blank" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryDescription)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Categories", new { id = item.Id }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", "Categories", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>

@section scripts{

    <script>
        $(function () {

            $("aside.main-sidebar .sidebar nav li.nav-item a[href*='/Admins/GetCategories']").addClass("active")

            // Search Form

            $("nav.main-header form#search-form input#search-input").prop("placeholder", "Search Categories");

            // we can neglect setting the action property, and the form will be submitted to the same action method.
            //$("nav.main-header form#search-form").prop("action", "/Admins/GetCategories");

        });
    </script>

}