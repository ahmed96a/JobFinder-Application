@model DataAccessLayer.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <h2>Delete</h2>

        <h5>Are you sure you want to delete this?</h5>
    </div>
</div>

@*To print the modelstate errors if the request to the webapi failed.*@

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<section class="content">
    <div class="container-fluid">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryDescription)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Categories List", "GetCategories", "Admins")
            </div>
        }
    </div>
</section>

@section Scripts {
    
    <script>
        $(function () {

            $("aside.main-sidebar .sidebar nav li.nav-item a[href*='/Admins/GetCategories']").addClass("active");

            // remove the form of the search input in the dashboard page.
            $("nav.main-header form#search-form").remove();

        });
    </script>

}
